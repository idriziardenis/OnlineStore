@model HomeViewModel

@{
    ViewData["Title"] = "Home";
}
<!-- slider-area -->
<section class="third-slider-area" data-background="front/img/slider/slider_bg.jpg" style="background-image: url(&quot;front/img/slider/slider_bg.jpg&quot;);">
    <div class="custom-container-two">
        <div class="row">
            <div class="col-12">
                <div class="slider-active slick-initialized slick-slider">
                    <div class="slick-list draggable">
                        <div class="slick-track" style="opacity: 1; width: 2626px;">
                            <div class="single-slider slider-bg slick-slide slick-current slick-active" data-background="/front/img/images/banner.png" data-slick-index="0" style="background-image: url(/front/img/images/banner.png); width: 1313px; position: relative; left: 0px; top: 0px; z-index: 999; opacity: 1;" aria-hidden="false" tabindex="0">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        @if (Model != null && Model.FeaturedProducts.Any())
        {
<div class="row justify-content-center">
    @foreach (var item in Model.FeaturedProducts)
    {
        @await Html.PartialAsync("_ProductItemFeatured", item)
    }
</div>}

    </div>
</section>
<!-- slider-area-end -->
<!-- trending-this-week -->
<section class="trending-this-week-area pt-100 pb-55">
    <div class="custom-container-two">
        <div class="row">
            <div class="col-12">
                <div class="deal-day-top">
                    <div class="deal-day-title">
                        <h4 class="title">Products</h4>
                    </div>
                    <div class="view-all-deal">
                        <a href="#"><i class="flaticon-scroll"></i> View All</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            @if (Model != null && Model.Products.Any())
            {
@foreach (var item in Model.Products)
{
@await Html.PartialAsync("_ProductItem", item)                }            }
        </div>
    </div>
</section>
<!-- trending-this-week-end -->
