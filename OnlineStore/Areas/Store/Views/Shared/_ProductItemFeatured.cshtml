@model ProductItemViewModel

<div class="col-xl-4 col-md-6 col-sm-10">
    <div class="slider-bottom-product list-product-item mb-30">
        <div class="list-product-thumb">
            <a asp-action="Details" asp-controller="Product"><img src="@Model.Path" alt=""></a>
        </div>
        <div class="list-product-content">
            <h6><a href="shop-details.html">@Model.Name</a></h6>
            <p>US $ @Model.Price></p>
            <div class="rating">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
            </div>
        </div>
    </div>
</div>