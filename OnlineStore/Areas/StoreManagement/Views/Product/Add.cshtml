@model ProductViewModel
@{
    ViewData["Title"] = (Model.Id == 0 ? SharedLocalizer["Add"].Value : SharedLocalizer["Edit"].Value);
    var extensionsAll = "jpeg, jpg, png";
    var extensions = extensionsAll.Split(",").Select(x => x.Trim()).ToArray();
}


@section Styles{
    <!-- Select2 -->
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
    <!-- bootstrap datetimepicker -->
    <link href="~/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <!-- File Input-->
    <link href="~/lib/fileinput/css/fileinput.min.css" rel="stylesheet" />
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <ol class="col-sm-12 breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="#">@SharedLocalizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">@SharedLocalizer["Products"]</a></li>
                    @if (Model.Id == 0)
                    {
                        <li class="breadcrumb-item active">@SharedLocalizer["Add"]</li>
                    }
                    else
                    {
                        <li class="breadcrumb-item">@Model.Name</li>
                        <li class="breadcrumb-item active">@SharedLocalizer["Edit"]</li>
                    }

                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-9" id="left-side-bar">
                <!-- jquery validation -->
                <div class="card @(Model.Id==0 ? "card-primary" : "card-warning")">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fa @(Model.Id==0 ? "fa-plus" : "fa-edit")"></i> &nbsp;&nbsp; @(Model.Id==0 ? SharedLocalizer["Add new product"].Value : SharedLocalizer["Edit product"].Value)</h3>
                        <span id="close" style="float:right" class="hidden-sm hidden-xs">
                            <span id="expand">@SharedLocalizer["CloseHelp"]</span>
                            <i class="fa fa-chevron-right" id="icon-expand" aria-hidden="true"></i>
                        </span>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="ProductForm" asp-action="Add" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" value="@Model.Id" />
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>@SharedLocalizer["Name"] *</label>
                                        <input type="text" asp-for="Name" data-title="@SharedLocalizer["MovieNameTitle"]" data-description="@SharedLocalizer["MovieNameDescription"]" class="form-control help-sidebar" placeholder="@SharedLocalizer["EnterName"]">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>@SharedLocalizer["Category"] </label>
                                        <div class=" help-sidebar" data-title="@SharedLocalizer["Category"]" data-description="@SharedLocalizer["Category"]">
                                            <select class="categories help-sidebar" id="Categories" asp-for="CategoryId" asp-items="@Model.Categories" data-placeholder="@SharedLocalizer["Select category"]" style="width: 100%;">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>@SharedLocalizer["Price"] *</label>
                                        <div class="input-group">
                                            <input type="number" asp-for="Price" step="0.01" min="0.01" class="form-control help-sidebar" placeholder="@SharedLocalizer["EnterPrice"]" data-title="@SharedLocalizer["Price"]" data-description="@SharedLocalizer["Price"]" />
                                            <div class="input-group-append">
                                                <div class="input-group-text"><i class="fa fa-euro"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>@SharedLocalizer["Stock"] *</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control help-sidebar" asp-for="Stock" placeholder="@SharedLocalizer["Enter stock"]" data-title="@SharedLocalizer["Stock"]" data-description="@SharedLocalizer["Stock"]" />
                                            <div class="input-group-append ">
                                                <span class="input-group-text"><i class="fa fa-store"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Is featured </label>
                                        <div class="input-group">
                                            <input type="checkbox" data-title="@SharedLocalizer["Is featured"]" data-description="@SharedLocalizer["Is featured"]" asp-for="IsFeatured" data-toggle="switchbutton" data-size="xs" data-onlabel="@SharedLocalizer["Yes"]" data-offlabel="@SharedLocalizer["No"]">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>@SharedLocalizer["Description"]</label>
                                        <div class="mb-3">
                                            <div class="help-sidebar" data-title="@SharedLocalizer["Description"]" data-description="@SharedLocalizer["Description"]">
                                                <textarea class="textarea" id="Description" asp-for="Description" placeholder="@SharedLocalizer["EnterDescription"]" style="font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>@SharedLocalizer["MainImage"]</label>
                                        <div class="custom-file">
                                            <div class="help-sidebar" data-title="@SharedLocalizer["MovieMainImageTitle"]" data-description="@SharedLocalizer["MovieMainImageDescription"]">
                                                <input id="MainImage" name="MainImage" type="file" accept="image/*" data-msg-placeholder="@SharedLocalizer["SelectImage"]" class="input-sm validate-upload" />
                                            </div>
                                        </div>
                                        <label><small>.jpg | 5mb max</small></label>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>@SharedLocalizer["OtherImages"]</label>
                                        <div class="custom-file">
                                            <div class="help-sidebar" data-title="@SharedLocalizer["MovieOtherImagesTitle"]" data-description="@SharedLocalizer["MovieOtherImagesDescription"]">
                                                <input id="OtherImages" multiple name="OtherImages" type="file" accept="image/*" data-msg-placeholder="@SharedLocalizer["SelectImages"]" class="input-sm validate-upload" />
                                            </div>
                                        </div>
                                        <label><small>.jpg | 5mb max</small></label>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>@SharedLocalizer["IsActive"]</label>
                                        <div class="input-group">
                                            <input type="checkbox" data-title="@SharedLocalizer["IsActive"]" data-description="@SharedLocalizer["IsActive"]" asp-for="IsActive" data-toggle="switchbutton" data-size="xs" data-onlabel="@SharedLocalizer["Yes"]" data-offlabel="@SharedLocalizer["No"]">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>


                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="pull-right">
                                <a asp-action="Index" class="btn btn-default">@SharedLocalizer["Cancel"]</a>
                                <button type="submit" class="btn @(Model.Id == 0 ? "btn-primary" : "btn-warning")"><i class="fa fa-save"></i> &nbsp;&nbsp;@SharedLocalizer["Save"]</button>
                            </div>

                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-3 navbar-right hidden-sm hidden-xs help-bar remove-left-padding" id="right-sidebar">
                <div class="card @(Model.Id==0 ? "card-primary" : "card-warning")">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fa fa-info"></i><span style="margin-left:15px" id="title">@SharedLocalizer["QuickHelp"]</span></h3>
                    </div>
                    <div class="card-body">
                        <p id="description">
                            @(Model.Id == 0 ? @SharedLocalizer["AddForm"] : @SharedLocalizer["EditForm"])
                        </p>
                    </div>
                </div>
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

