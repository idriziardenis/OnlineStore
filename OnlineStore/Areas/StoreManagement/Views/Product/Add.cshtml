                        valid[x] = false;
                        for (var i = 0; i <= allowed_extensions.length; i++) {
                            var file_extension = $(this).get(0).files[x].name.split(".").pop().toLowerCase();
                            if (allowed_extensions[i] == file_extension) {
                                valid[x] = true;
                                break;
                            }
                        }
                    }

