@using Microsoft.AspNetCore.Identity
@using OnlineStore.Data;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IUserService _userService
@using OnlineStore.Interfaces
@inject IUserService _userService
@{
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
}
<style>
    .dropdown-menu-lg {
        max-width: 180px !important;
        min-width: 150px !important;
        padding: 0 !important;
    }
</style>
<!-- Left navbar links -->
<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa fa-bars"></i></a>
    </li>
    <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Home</a>
    </li>
    <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Contact</a>
    </li>
</ul>

<!-- SEARCH FORM -->
<form class="form-inline ml-3">
    <div class="input-group input-group-sm">
        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
        <div class="input-group-append">
            <button class="btn btn-navbar" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
</form>

<!-- Right navbar links -->
<ul class="navbar-nav ml-auto">

    <!-- Language Dropdown Menu -->
    <li class="nav-item dropdown">
        @if (culture == "sq-AL")
        {
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="flag-icon flag-icon-al"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right p-0">
                <a asp-area="StoreManagement" asp-controller="Home" asp-action="SetLanguage" value="sq-AL" name="culture" asp-route-culture="sq-AL" asp-route-returnUrl="@returnUrl" class="dropdown-item active">
                    <i class="flag-icon flag-icon-al mr-2"></i> @SharedLocalizer["Albanian"]
                </a>
                <a asp-area="StoreManagement" asp-controller="Home" asp-action="SetLanguage" value="en-US" name="culture" asp-route-culture="en-US" asp-route-returnUrl="@returnUrl" class="dropdown-item">
                    <i class="flag-icon flag-icon-us mr-2"></i> @SharedLocalizer["English"]
                </a>
            </div>
        }
        else
        {
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="flag-icon flag-icon-us"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right p-0">
                <a asp-area="StoreManagement" asp-controller="Home" asp-action="SetLanguage" value="en-US" name="culture" asp-route-culture="en-US" asp-route-returnUrl="@returnUrl" class="dropdown-item active">
                    <i class="flag-icon flag-icon-us mr-2"></i> @SharedLocalizer["English"]
                </a>
                <a asp-area="StoreManagement" asp-controller="Home" asp-action="SetLanguage" value="sq-AL" name="culture" asp-route-culture="sq-AL" asp-route-returnUrl="@returnUrl" class="dropdown-item">
                    <i class="flag-icon flag-icon-al mr-2"></i> @SharedLocalizer["Albanian"]
                </a>
            </div>
        }
    </li>
    <li class="nav-item dropdown user-menu" style="max-width: 180px !important; min-width: 150px !important; padding: 0 !important;">
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
            <span class="d-none d-md-inline">@_userService.GetFullName()</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
            <!-- User image -->
            <li class="user-header bg-primary">

                <p>@_userService.GetFullName()<small>@_userService.GetUserRole()</small></p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">

                <form asp-action="Logout" asp-controller="Account" asp-area="Store">
                    <a asp-action="Profile" asp-controller="Home" asp-area="StoreManagement" asp-route-id="@_userService.GetUserId()" class="btn btn-xs btn-default btn-flat">Profile</a>
                    <button type="submit" class="btn btn-xs btn-default btn-flat float-right">Sign out</button>
                </form>

            </li>
        </ul>
    </li>
</ul>