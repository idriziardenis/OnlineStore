@using System.Reflection;
@{
    var version = Assembly.GetEntryAssembly().GetName().Version;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Store</title>
    <!-- Styles -->
    <link href="~/css/style.css" rel="stylesheet" />

    @*<!-- Font Awesome -->
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <!-- Font Awesome Admin LTE -->
        <link href="~/lib/fontawesome-free/css/fontawesome.min.css" rel="stylesheet" />*@

    <script src="https://kit.fontawesome.com/6a0afafb4b.js" crossorigin="anonymous"></script> <!--ALL ICONS v5-->
    @*<link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" />*@
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/css/adminlte.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- flag-icon-css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.3.0/css/flag-icon.min.css">
    <!-- summernote -->
    <link href="~/lib/summernote/summernote-bs4.css" rel="stylesheet" />
    <!-- Toastr -->
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <!-- Boostrap Switch -->
    @*<link href="~/lib/bootstrap-switch/css/bootstrap3/bootstrap-switch.min.css" rel="stylesheet" />*@
    <link href="~/lib/bootstrap-switch-button/css/bootstrap-switch-button.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

</head>
<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            @await Html.PartialAsync("_Navbar")
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            @await Html.PartialAsync("_Sidebar")
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Developed by:</b> Ardenis Idrizi
            </div>
            <strong>Copyright &copy; 20222 <a href="#">Online Store</a>. </strong> All rights reserved. Version: @version
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/js/demo.js"></script>
    <!-- InputMask -->
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- summernote -->
    <script src="~/lib/summernote/summernote-bs4.min.js"></script>
    <!-- Boostrap Switch -->
    @*<script src="~/lib/bootstrap-switch/js/bootstrap-switch.min.js"></script>*@
    <script src="~/lib/bootstrap-switch-button/js/bootstrap-switch-button.min.js"></script>
    <!-- Toastr -->
    <script src="~/lib/toastr/toastr.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
